// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User model for NextAuth authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String? // Hashed password for credentials provider
  firstName     String?
  lastName      String?
  image         String?
  role          String    @default("user") // user, admin, manager
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // Business relations
  customers     Customer[]
  orders        Order[]
  expenses      Expense[]
  suppliers     Supplier[]
  inventory     Inventory[]
  staff         Staff[]
  payments      Payment[]
  servicePrices ServicePrice[]

  @@index([email])
  @@index([role])
}

// Customer management
model Customer {
  id        String   @id @default(cuid())
  name      String
  phone     String
  address   String?
  email     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  orders Order[]

  @@index([userId])
  @@index([phone])
}

// Order management
model Order {
  id           String    @id @default(cuid())
  orderNumber  String    @unique
  serviceType  String? // Optional - for backward compatibility, service type now at item level
  totalAmount  Float
  paidAmount   Float     @default(0)
  status       String    @default("pending") // pending, in_progress, ready, completed, cancelled
  dueDate      DateTime
  pickupDate   DateTime?
  deliveryDate DateTime?
  notes        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Foreign keys
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  staffId    String?
  staff      Staff?   @relation(fields: [staffId], references: [id], onDelete: SetNull)

  // Relations
  items    OrderItem[]
  payments Payment[]

  @@index([userId])
  @@index([customerId])
  @@index([staffId])
  @@index([status])
  @@index([dueDate])
}

// Individual items in an order
model OrderItem {
  id          String  @id @default(cuid())
  itemType    String // e.g., "Shirt", "Pants", "Dress", "Bedsheet"
  serviceType String  @default("wash_and_iron") // e.g., "wash_and_iron", "dry_cleaning", "iron_only"
  quantity    Int
  price       Float // Price per item for this service type
  notes       String?

  // Foreign keys
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([serviceType])
}

// Expense tracking
model Expense {
  id          String   @id @default(cuid())
  category    String // e.g., "Utilities", "Supplies", "Salary", "Rent", "Maintenance"
  amount      Float
  description String
  date        DateTime @default(now())
  receiptUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Foreign keys
  supplierId String?
  supplier   Supplier? @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
  @@index([date])
}

// Supplier management
model Supplier {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String?
  address   String?
  category  String // e.g., "Detergent", "Equipment", "Packaging"
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  expenses Expense[]

  @@index([userId])
  @@index([category])
}

// Inventory management
model Inventory {
  id            String   @id @default(cuid())
  name          String
  quantity      Float
  unit          String // e.g., "kg", "liters", "pieces"
  minStockLevel Float
  category      String? // e.g., "Detergent", "Softener", "Hangers"
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Foreign keys
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([quantity])
}

// Staff management
model Staff {
  id             String   @id @default(cuid())
  name           String
  phone          String
  email          String?
  role           String // e.g., "Manager", "Attendant", "Delivery"
  salary         Float // Monthly salary
  commissionRate Float    @default(0) // Commission percentage (0-100)
  hireDate       DateTime @default(now())
  status         String   @default("active") // active, inactive, terminated
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Foreign keys
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  attendances    Attendance[]
  salaryPayments SalaryPayment[]
  ordersHandled  Order[]

  @@index([userId])
  @@index([role])
  @@index([status])
}

// Attendance tracking
model Attendance {
  id        String    @id @default(cuid())
  date      DateTime
  status    String // present, absent, leave, half_day
  checkIn   DateTime?
  checkOut  DateTime?
  notes     String?
  createdAt DateTime  @default(now())

  // Foreign keys
  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([staffId, date])
  @@index([staffId])
  @@index([date])
}

// Salary payment tracking
model SalaryPayment {
  id              String   @id @default(cuid())
  amount          Float // Amount paid
  commission      Float    @default(0) // Commission earned
  totalPaid       Float // Total = amount + commission
  month           String // e.g., "2024-01" for January 2024
  paymentDate     DateTime @default(now())
  paymentMethod   String // Cash, Bank Transfer, etc.
  ordersCompleted Int      @default(0) // Number of orders completed in the period
  notes           String?
  createdAt       DateTime @default(now())

  // Foreign keys
  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@index([staffId])
  @@index([month])
}

// Payment tracking
model Payment {
  id            String   @id @default(cuid())
  amount        Float
  method        String // e.g., "Cash", "Card", "Mobile Money", "Bank Transfer"
  date          DateTime @default(now())
  transactionId String?
  notes         String?
  createdAt     DateTime @default(now())

  // Foreign keys
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([orderId])
  @@index([date])
}

// Service pricing management
model ServicePrice {
  id          String   @id @default(cuid())
  serviceType String // e.g., "wash_and_iron", "dry_cleaning", "iron_only"
  itemType    String // e.g., "Shirt", "Trouser/Pants", "Dress"
  price       Float // Price for this service-item combination
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Foreign keys
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Unique constraint: one price per service-item combination per user
  @@unique([userId, serviceType, itemType])
  @@index([userId])
  @@index([serviceType])
}
